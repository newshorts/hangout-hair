//            canvas.setVideoFeed(feed);
//            canvas.setWidth(600);
//            canvas.setPosition(300, 50);
//            canvas.setVisible(true);
        }
    });
}

// Wait for gadget to load.                                         
gadgets.util.registerOnLoadHandler(init); 
</script>
